@model UsuarioModel

@{
    ViewData["Title"] = "Excluir usuário";
}

<div class="text center">
    <h3>Deseja realmente excluir o usuario(@Model.Nome)?</h3>
</div>
<div class="d-grid gap-2">
    <a class="btn btn-primary" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>
</div>